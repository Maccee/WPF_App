<Window x:Class="HelloWorldApp.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="200" Width="300"
        WindowStyle="ThreeDBorderWindow"  
        ResizeMode="NoResize"  
        ShowInTaskbar="False">  
    <StackPanel>
        <TextBlock Text="WPF (.NET Core) application" FontWeight="Bold" Padding="10"/>
        <TextBlock Text="This app allows users to search for images via the Helsinki Linked Events API (https://api.hel.fi/linkedevents/v1/image/) and displays up to 50 images related to their search query." Padding="10" TextWrapping="Wrap"/>

        <Button Content="Close" HorizontalAlignment="Center" Click="CloseButton_Click"/>
    </StackPanel>
</Window>
